{% extends 'publicView/base.html.twig' %}

{% block title %}Illustrations{% endblock %}

{% block content %}

    <main id="titreAllIllustration">
        <h2>Illustrations</h2>
        <div class="decorativeFeature"></div>
        <section id="allIllustration">
            {% for illustration in illustrations %}
                <div class="thumbnail thumbnailHome">
                    <div class="DivImg">
                        <img src="{{ asset('uploadThumbnail/'~ illustration.thumbnail) }}"
                                 alt="{{ illustration.name }}">
                    </div>
                    <div>
                        <h3>{{ illustration.name }}</h3>
                        {% if illustration.user.pseudo %}
                            <h3>{{ illustration.user.pseudo }}</h3>
                        {% else %}
                            <h3>{{ illustration.user.firstname }}</h3>
                        {% endif %}
                        <div class="illustrationCategory">
                            {% if illustration.category is not empty %}
                                {% for category in illustration.category%}
                                    <p>{{ category.libelle }}</p>
                                    <p> / </p>
                                {% endfor %}
                            {% else %}
                                <p>Sans cat√©gorie</p>
                                <p>.</p>
                            {% endif %}
                        </div>
                    </div>
                    <div>
                        <a href="{{ path('public_illustration', {'id': illustration.id}) }}#oneIllustration" class="OpenThumbnail">Voir illustration</a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>

{% endblock %}