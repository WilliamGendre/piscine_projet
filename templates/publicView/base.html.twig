<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="{{ asset('css/stylePublic.css') }}">
</head>
<body>
    <header>
        <section>
            <section>
                <div class="logo"><img src="{{ asset('images/logo.jpg') }}" alt="logo"></div>
                <h1>MyDesign</h1>
                <nav class="navReseauxSociaux">
                    <ul>
                        <li><a href=""><i class="fa-brands fa-facebook"></i></a></li>
                        <li><a href=""><i class="fa-brands fa-square-x-twitter"></i></a></li>
                    </ul>
                </nav>
            </section>
            <nav id="navMenu">
                <ul>
                    <li><a href="{{ path('index') }}">Accueil</a></li>
                    <li><a href="">menu</a></li>
                    <li>
                        <ul>
                            <li><a href="{{ path('app_login') }}">Connexion</a></li>
                            <li><a href="{{ path('users_insert') }}">Inscription</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <!-- Rajouté action="{# {{ path('') }} #}" -->
            <form method="post" id="formHeader">
                <input type="search">
                <input type="submit" value="Rechercher">
            </form>
        </section>
        <div id="backgroundImage"></div>
        {% for message in app.flashes('success') %}
            <h2 class="flashSuccess">{{ message }}</h2>
        {% endfor %}
        {% for message in app.flashes('fail') %}
            <h2 class="flashFail">{{ message }}</h2>
        {% endfor %}
    </header>

{% block content %}

{% endblock %}

    <footer>
        <nav>
            <ul>
                <li><div class="logo"><img src="{{ asset('images/logo.jpg') }}" alt="logo"></div></li>
                <li><a href="" class="navFooter">Condition générales</a></li>
                <li><a href="" class="navFooter">Nous contacter</a></li>
                <li>
                    <ul>
                        <li><a href=""><i class="fa-brands fa-facebook"></i></a></li>
                        <li><a href=""><i class="fa-brands fa-square-x-twitter"></i></a></li>
                    </ul>
                </li>
            </ul>
        </nav>
    </footer>
</body>
</html>