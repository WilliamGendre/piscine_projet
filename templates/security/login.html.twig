{% extends 'publicView/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}

    <main>

        <h2 class="h3 mb-3 font-weight-normal">Connexion</h2>
        <div class="decorativeFeature"></div>

        <form method="post" class="formMain">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <label for="username"><p>Email</p>
                <input type="email" value="{{ last_username }}" name="_username" placeholder="entrer votre email" id="username" class="form-control" autocomplete="email" required autofocus>
            </label>
            <label for="password"><p>Mot de passe</p>
                <input type="password" name="_password" placeholder="entrer votre mot de passe" id="password" class="form-control" autocomplete="current-password" required>
            </label>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit" id="formSubmit">
                Connexion
            </button>
        </form>

    </main>
{% endblock %}
