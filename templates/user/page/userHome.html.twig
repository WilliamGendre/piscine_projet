{% extends 'user/baseUser.html.twig' %}

{% block title %}Accueil utilisateur{% endblock %}

{% block content %}

    <main>
        <section id="pageUser">
            <div>
                <div id="logoUser"><img src="{{ asset('images/logo.jpg') }}" alt="logo"></div>
                <a href="{{ path('user_insert_illustration') }}">Nouvelle article</a>
            </div>
            <nav id="navUser">
                <ul>
                    {% if app.user.pseudo %}
                        <li><p>{{ app.user.pseudo }}</p></li>
                    {% else %}
                        <li><p>{{ app.user.firstname }}</p></li>
                    {% endif %}
                    <li>
                        <ul id="reseauxUser">
                            <li><a href="">Messagerie</a></li>
                            <li><a href=""><i class="fa-brands fa-facebook"></i></a></li>
                            <li><a href=""><i class="fa-brands fa-square-x-twitter"></i></a></li>
                        </ul>
                    </li>
                </ul>
            </nav>

            <article>
                {% for illustration in illustrations %}
                    {% if illustration.user == user %}
                        <div class="thumbnail">
                            <img src="{{ asset('uploadThumbnail/'~ illustration.thumbnail) }}" alt="{{ illustration.name }}">
                        </div>
                    {% endif %}
                {% endfor %}
            </article>
        </section>
    </main>

{% endblock %}